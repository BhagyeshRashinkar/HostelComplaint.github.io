<html>

<head>
    {{>header}}
    <title>Hostel Complaint</title>
    {{!--
    <link rel="stylesheet" href="../public/css/hostelstyle.css"> --}}
</head>

<body>
    {{>navbar}}

    <div class="post">
        <h2>Post Complaint</h2>
    </div>

    <div class="form">
        <form method="POST">
            <div class="empty"></div>
            <div class="number">
                <label for="number">Complaint No.</label><br>
                <input type="text" id="number" name="number"></input>
            </div>
            <div class="empty"></div>
            <div class="input">
                <label id='a' for="roll">Student Roll No.<span style='color:red;'>*</span></label><br>
                <input type="text" id="roll" name="roll"></input>
            </div>

            <div class="input">
                <label id='b' for="name">Student Name<span style='color:red;'>*</span></label><br>
                <input type="text" id="name" name="name"></input>
            </div>

            <div class="input">
                <label id='c' for="contact">Student Contact No.<span style='color:red;'>*</span></label><br>
                <input type="text" id="contact" name="contact"></input>
            </div>

            <div class='select'>
                <label id='d' for="block">Hostel Block<span style='color:red;'>*</span></label><br>
                <select id="block" name="block">
                    <option value="" selected disabled>Select your Hostel Block</option>
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                </select>
            </div>

            <div class='select'>
                <label id='e' for="room">Student Room No.<span style='color:red;'>*</span></label><br>
                <input type="text" id="room" name="room"></input>
            </div>

            <div class="select">
                <label id='f' for="type">Type of Complaint<span style='color:red;'>*</span></label></br>
                <select id="type" name="type">
                    <option value="" selected disabled>Select Complaint Type</option>
                    <option value="Plumber">Plumber Complaint</option>
                    <option value="Carpetary">Carpetary Complaint</option>
                    <option value="Cleanlier">Cleanlier Complaint</option>
                    <option value="Electricity">Electricity Complaint</option>
                </select>
            </div>

            <div class="describe">
                <label id='g' for="description">Please enter the nature of your complaint:<span style='color:red;'>*</span></label></br>
                <textarea id="description" type="text" name="description"></textarea>
            </div>

            <div class="empty"></div>
            <div class="button">
                <input onclcick="submit()" type="submit" id="a" value="Submit Complaint" />
            </div>
            <div class="empty"></div>
        </form>
    </div>

    <script type="text/javascript">
        function complaintNumber() {
            let box = document.getElementById('number');
            box.value = Math.floor(10000 + Math.random() * 90000);
        }

        complaintNumber();
    </script>
</body>

</html>